<!-- Procedure list -->
<button class="btn btn-success" {{action "createProcedure"}}>Crear nuevo</button>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Tags</th>
    </tr>
    </thead>

    <tbody>
    {{#each model as |procedure| }}
      <tr>
        <td>{{#link-to 'procedures.view' procedure}}{{procedure.id}}{{/link-to}}</td>
        <td>{{#link-to 'procedures.view' procedure}}{{procedure.name}}{{/link-to}}</td>
        <td>{{procedure.tags}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="3">No procedures found</td>
      </tr>
    {{/each}}
    </tbody>

    <tfoot>
      <tr>
        <td>Total</td>
        <td colspan="2">{{model.length}}</td>
      </tr>
    </tfoot>
  </table>
</div>